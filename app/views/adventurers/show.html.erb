<div class=" w-3/4 sm:w-full relative flex flex-col items-center mx-auto md:max-w-2xl mt-6 min-w-0 break-words bg-white w-full mb-6 shadow-lg rounded-xl mt-16 border-2 border-grey-500 hover:border-yellow-800">


  <div class="px-6">
    <div class="flex flex-wrap justify-center">
      <div class="w-full flex justify-center align-middle">
        <%= image_tag "https://avatars.dicebear.com/api/avataaars/#{@adventurer.name}.svg", alt: "Image of #{@adventurer.name}", class: "shadow-xl bg-white rounded-full align-middle border-none absolute -m-16 -ml-20 lg:-ml-16 max-w-[150px] hover:border-2 hover:border-yellow-800" %>
      </div>
      <div class="w-full text-center mt-20">
        <div class="flex justify-center lg:pt-4 pt-8 pb-0">
          <div class="p-3 text-center">
            <span class="text-xl font-bold block uppercase tracking-wide text-slate-700"><%= rand(4000) %></span>
            <span class="text-sm text-slate-400">Days Adventuring</span>
          </div>
          <div class="p-3 text-center">
            <span class="text-xl font-bold block uppercase tracking-wide text-slate-700"><%= rand(40) %></span>
            <span class="text-sm text-slate-400">Campaigns Completed</span>
          </div>
        </div>
      </div>
    </div>
    <div class="text-center mt-2">
      <h3 class="text-2xl text-slate-700 font-bold leading-normal mb-1"><%= @adventurer.name %>
        of <%= @adventurer.city %></h3>
      <div class="text-xs mt-0 mb-2 text-slate-400 font-bold uppercase">
        <%= @adventurer.klass %>
      </div>
    </div>
  </div>



  <%= form_with model: @adventurer, class: "w-2/3 flex flex-col my-4 items-center md:items-end" do |f| %>
    <div class="md:flex md:w-full md:justify-between md:items-center mb-6">
      <%= f.label :adventurer, "Full Name", class: "block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" %>
      <%= f.text_field :name, class: "bg-gray-200 appearance-none border-2 border-gray-200 rounded min-w-2/3 py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
    </div>

    <div class="md:flex md:w-full md:justify-between md:items-center mb-6">
      <%= f.label :adventurer, "City", class: "block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" %>
      <%= f.text_field :city, class: "bg-gray-200 appearance-none border-2 border-gray-200 rounded min-w-2/3 py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
    </div>

    <div class="md:flex md:w-full md:justify-between md:items-center mb-6">
      <%= f.label :adventurer, "Class", class: "block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" %>
      <%= f.text_field :klass, class: "bg-gray-200 appearance-none border-2 border-gray-200 rounded min-w-2/3 py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
    </div>

    <div class="md:flex md:w-full md:justify-between md:items-center mb-6">
      <%= f.label :adventurer, "Alignment", class: "block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" %>
      <%= f.text_field :alignment, class: "bg-gray-200 appearance-none border-2 border-gray-200 rounded min-w-2/3 py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
    </div>

    <div class="md:flex md:w-full md:justify-between md:items-center mb-6">
      <%= f.label :adventurer, "Primary Weapon", class: "block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" %>
      <%= f.text_field :primary_weapon, class: "bg-gray-200 appearance-none border-2 border-gray-200 rounded min-w-2/3 py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
    </div>

    <div class="md:flex md:w-full md:justify-between md:items-center mb-6">
      <%= f.label :adventurer, "Secondary Weapon", class: "block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" %>
      <%= f.text_field :secondary_weapon, class: "bg-gray-200 appearance-none border-2 border-gray-200 rounded min-w-2/3 py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
    </div>

      <%= f.submit "Save", class: "w-1/2 md:w-1/4 shadow bg-purple-500 hover:bg-purple-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded" %>
  <% end %>
</div>
